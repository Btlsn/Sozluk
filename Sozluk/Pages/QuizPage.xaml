<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sozluk.Pages.QuizPage"
             Title="Quiz Sayfası">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
        Text="Quiz'e Başla"
        Clicked="StartQuizBtnClicked"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Margin="5,5,5,5"
        />
        <Label x:Name="dailyWordCountLabel"
               Text="Bugün ilk defa sorulucak kelime sayısı: 0"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        <Label x:Name="dailyQuizCountLabel"
       Text="Kalan kelime sayısı: 0"
       HorizontalOptions="Center"
       VerticalOptions="CenterAndExpand" />
        <Label x:Name="wordLabel1" />
        <Label x:Name="wordLabel2" />
        <Label x:Name="wordLabel3" />
        <Label x:Name="wordLabel4" />
        <Label x:Name="wordLabel5" />
        <Label x:Name="wordLabel6" />
        <Label x:Name="wordLabel7" />
    </VerticalStackLayout>
</ContentPage>